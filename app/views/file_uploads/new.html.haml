= turbo_frame_tag "modal" do
  = simple_form_for @file_upload, html: { multipart: true } do |f|
    .modal-header
      %h1.modal-title.fs-5=t('.upload_dataset')
      %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
    .modal-body
      - if @file_upload.errors.any?
        .alert.alert-danger
          = @file_upload.errors.full_messages.to_sentence
      = f.input :file, as: :file, label: false
      %small.form-text
        = t('.accepted_file_types')
    .modal-footer
      %button.btn.btn-secondary{"data-bs-dismiss" => "modal", type: "button"} Close
      = f.button :submit, t('.upload'), class: 'btn btn-primary'
