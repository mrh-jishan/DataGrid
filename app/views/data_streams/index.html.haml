.dropdown
  %button.btn.btn-primary.btn-sm.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", type: "button"}
    = t('.add_data_stream')
  %ul.dropdown-menu
    %li
      = link_to t('.from_existing_dataset'),  new_data_stream_path(use_dataset: true), class: "dropdown-item"
    %li
      %hr.dropdown-divider
    %li
      = link_to t('.new_data_stream'),  new_data_stream_path, class: "dropdown-item"

%hr

%table.table
  %thead
    %tr
      %th #
      %th Label
      %th Unique by
      -# %th Gid
      %th CreatedAt
      %th Action
  %tbody{id: "data_streams"}
    = render partial: "data_stream", collection: @data_streams
