.ms-auto
  %button{class: "btn btn-primary", type: "button", title: t('.connection_info'), "data-bs-toggle": "modal", "data-bs-target": "#connectionInfo"}
    %i.bi-info-circle
  #connectionInfo.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "connectionInfoLabel", tabindex: "-1"}
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          %h1#exampleModalLabel.modal-title.fs-5= t('.connection_info')
          %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
        .modal-body
          = render "connection_info"
        .modal-footer
          %button.btn.btn-primary{"data-bs-dismiss" => "modal", type: "button"} Close