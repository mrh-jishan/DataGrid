= simple_form_for([@data_stream], html: {"data-turbo": false}) do |f|
  = f.input :label
  = f.input :dataset, collection: @datasets, input_html: {data: { controller: "slim-select" }}
  = f.input :unique_by, hint: t('.unique_column_name'), input_html: {"data-controller": 'tagify',  value: @data_stream.tagify }
  = f.submit class: 'btn btn-primary'