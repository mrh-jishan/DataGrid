= link_to t('.file_upload'), new_file_upload_path, class: "btn btn-sm btn-primary", data: { turbo_frame: "modal" }
.modal.fade{"data-action" => "turbo:frame-load->modal#open turbo:submit-end->modal#close", "data-controller" => "modal", tabindex: "-1"}
  .modal-dialog.modal-dialog-centered
    .modal-content
      = turbo_frame_tag "modal"

%hr

%table.table
  %thead
    %tr
      %th{scope: "col"} DataSet
      %th{scope: "col"} No. of dashboards
      %th{scope: "col"} CreatedAt
      %th{scope: "col"} Action
  %tbody{id: "file_uploads"}
    = render partial: "file_uploads/file_upload", collection: @file_uploads
