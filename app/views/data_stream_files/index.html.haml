.d-flex.align-items-center
  %h4
    = @data_stream
  .ms-auto
    .d-flex.align-items-center
      .me-2
        = render "common/token_sgid", sgid: @data_stream.to_global_id
      = render "common/connection_modal"

%hr

%table.table
  %thead
    %tr
      %th #
      %th= t('.file')
      %th= t('.created_at')
      %th= t('.action')
  %tbody{id: "data_stream_files"}
    = render partial: "data_stream_file", collection: @data_stream_files

